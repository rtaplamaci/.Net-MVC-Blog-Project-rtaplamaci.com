@model rtaplamaciBlog.Models.ViewModels.VMBlogListe
@{
    ViewBag.Description = Model.BlogPanelAyar.MDescripton;
    ViewBag.Author = Model.BlogPanelAyar.MAuthor;
    ViewBag.Url = Model.BlogPanelAyar.MUrl;
    ViewBag.Keywords = Model.BlogPanelAyar.MKeywords;
    ViewBag.Title = Model.BlogPanelAyar.STitle;
    Layout = "~/Views/_Shared/_SiteLayout.cshtml";
}
<section class="resume-section p-3 p-lg-5 d-flex d-column" id="about">
    <div class="my-auto">
        <div class="bd-example hideOnMobile">
            <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    @{ int sira = 0;
                        foreach (var yazi in Model.Yazilar.Take(5))
                        {
                            if (sira == 0)
                            {
                                <div class="carousel-item active">
                                    <img src="~/Images/BlogContent/Normal/@yazi.NGDizin" class="d-block w-100" alt="@yazi.NGAlt">
                                    <div class="carousel-caption d-none d-md-block">
                                        <a href="~/Blog/@yazi.Baslik.Replace(' ','-').Replace('ö', 'o').Replace('ü', 'u').Replace('ğ', 'g').Replace('ş', 's').Replace('ı', 'i').Replace('ç', 'c').Replace('Ö', 'O').Replace('Ü', 'U').Replace('Ğ', 'G').Replace('Ş', 'S').Replace('İ', 'I').Replace('Ç', 'C').Replace('#','-').ToLower()/Detay/@yazi.Id">
                                            <h5 style="background-color: rgba(255,255,255,.8); color:black; font-size:xx-large">@yazi.Baslik</h5>
                                        </a>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="carousel-item">
                                    <img src="~/Images/BlogContent/Normal/@yazi.NGDizin" class="d-block w-100" alt="@yazi.NGAlt">
                                    <div class="carousel-caption d-none d-md-block">
                                        <a href="~/Blog/@yazi.Baslik.Replace(' ','-').Replace('ö', 'o').Replace('ü', 'u').Replace('ğ', 'g').Replace('ş', 's').Replace('ı', 'i').Replace('ç', 'c').Replace('Ö', 'O').Replace('Ü', 'U').Replace('Ğ', 'G').Replace('Ş', 'S').Replace('İ', 'I').Replace('Ç', 'C').Replace('#','-').ToLower()/Detay/@yazi.Id">
                                            <h5 style="background-color: rgba(255,255,255,.8); color:black; font-size:xx-large">@yazi.Baslik</h5>
                                        </a>
                                    </div>
                                </div>
                            }
                            sira++;
                        }
                    }
                </div>
                <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <br />
        @foreach (var yazi in Model.Yazilar)
        {
            <div class="card mb-12">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <a href="~/Blog/@yazi.Baslik.Replace(' ','-').Replace('ö', 'o').Replace('ü', 'u').Replace('ğ', 'g').Replace('ş', 's').Replace('ı', 'i').Replace('ç', 'c').Replace('Ö', 'O').Replace('Ü', 'U').Replace('Ğ', 'G').Replace('Ş', 'S').Replace('İ', 'I').Replace('Ç', 'C').Replace('#','-').ToLower()/Detay/@yazi.Id">
                            <img src="~/Images/BlogContent/Mini/@yazi.MGDizin" class="card-img" alt="@yazi.MGAlt">
                        </a>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <a href="~/Blog/@yazi.Baslik.Replace(' ','-').Replace('ö', 'o').Replace('ü', 'u').Replace('ğ', 'g').Replace('ş', 's').Replace('ı', 'i').Replace('ç', 'c').Replace('Ö', 'O').Replace('Ü', 'U').Replace('Ğ', 'G').Replace('Ş', 'S').Replace('İ', 'I').Replace('Ç', 'C').Replace('#','-').ToLower()/Detay/@yazi.Id">
                                <h3 class="card-title"><span class="font-weight-bold">@yazi.Baslik</span></h3>
                            </a>
                            <p class="card-text"><small class="text-muted">@yazi.Tarih.ToLongDateString()</small></p>
                            <p class="card-text">@Html.Raw(yazi.Aciklama)</p>
                        </div>
                    </div>
                </div>
            </div>
            <br />
        }
    </div>
</section>

@{
    ViewBag.Title = "Footer Açıklaması Ayarları | Site Yönetim Paneli";
    Layout = "~/Areas/SiteYonetimPaneli/Views/Shared/YpLayout.cshtml";
}
@model rtaplamaciBlog.Models.FotterAciklamaAyar
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Footer Açıklaması Ayarları</h3>
                </div>
                @using (Html.BeginForm("FooterAciklamasi", "YpAyarlar", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="box-body">
                        @if (TempData["Basarili"] != null)
                        {
                            <div class="alert alert-success alert-dismissible">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                <h4><i class="icon fa fa-info"></i> Bilgi!</h4>
                                <p style="font-size:large">@TempData["Basarili"]</p>
                            </div>
                        }
                        <div class="form-group">
                            <label for="Baslik">Başlık</label>
                            <input type="text" class="form-control" id="Baslik" placeholder="Başlık" name="Baslik" value="@Model.Baslik">
                        </div>
                        <div class="form-group">
                            <label for="Aciklama">Açıklama:</label>
                            <textarea class="form-control" name="Aciklama" id="Aciklama">@Model.Aciklama</textarea>
                        </div>
                    </div>
                    <div class="box-footer">
                        <button type="submit" class="btn btn-success pull-right">Kaydet</button>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
@section BodyAlti{
    <script src="~/Areas/SiteYonetimPaneli/Content/ckeditor/ckeditor.js"></script>
    <script>
        $(function () {
            CKEDITOR.replace('Aciklama')
        })
    </script>
}



@model rtaplamaciBlog.Models.IletisimAyar
@{
    ViewBag.Description = Model.MDescripton;
    ViewBag.Author = Model.MAuthor;
    ViewBag.Url = Model.MUrl;
    ViewBag.Keywords = Model.MKeywords;
    ViewBag.Title = Model.STitle;
    Layout = "~/Views/_Shared/_SiteLayout.cshtml";
}
<section class="resume-section p-3 p-lg-5 d-flex flex-column">
    <div class="my-auto">
        <h2 class="mb-5">@Model.Baslik</h2>
        @Html.Raw(Model.Icerik)
        <div class="text-dark text-center">
            <p>@TempData["Basarili"]</p>
        </div>
        <div class="col-md-12">
            <div class="form-area">
                @using (Ajax.BeginForm("Index", "Iletisim", new AjaxOptions { HttpMethod = "POST" }, new { @class = "iletisimForm" }))
                {
                    @Html.AntiForgeryToken()
                    <input type="text" class="form-control" name="adSoyad" placeholder="Adınız, Soyadınız" required="">
                    <input type="email" class="form-control" name="eMail" placeholder="Email Adresiniz" required="">
                    <textarea class="form-control" type="textarea" placeholder="Mesajınız" maxlength="140" rows="7" required="" name="Mesaj"></textarea>
                    <button type="submit" class="btn btn-secondary form-control">Gönder</button>
                }
            </div>
        </div>
    </div>
</section>

@{
    ViewBag.Title = "Layout Görsel ve Açıklama Ayarları | Site Yönetim Paneli";
    Layout = "~/Areas/SiteYonetimPaneli/Views/Shared/YpLayout.cshtml";
}
@model rtaplamaciBlog.Models.LGorselAciklamaAyar
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Layout Görsel ve Açıklama Ayarları</h3>
                </div>
                @using (Html.BeginForm("LayoutGorselAciklama", "YpAyarlar", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="box-body">
                        @if (TempData["Basarili"] != null)
                        {
                            <div class="alert alert-success alert-dismissible">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                <h4><i class="icon fa fa-info"></i> Bilgi!</h4>
                                <p style="font-size:large">@TempData["Basarili"]</p>
                            </div>
                        }
                        @if (TempData["Uyari"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                <h4><i class="icon fa fa-info"></i> Uyarı!</h4>
                                <p style="font-size:large">@TempData["Uyari"]</p>
                            </div>
                        }
                        <div class="form-group">
                            <label for="AnasayfaIcerikGorseli">Layout Görseli:</label>

                            <div class="col-sm-12">
                                <div class="col-md-12">
                                    <div class="row">
                                        <div class="col-md-3">
                                            <img class="col-md-12 col-sm-12 col-xs-12" src="~/Images/General/@Model.GDizin">
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label for="LayoutGorseli">Görsel Seç:</label>
                                                <input type="file" name="file">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="GAlt">Görsel Açıklaması:</label>
                                                <input type="text" class="form-control" id="GAlt" placeholder="Görsel Açıklaması" value="@Model.GAlt" name="GAlt">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <input type="hidden" name="GDizin" value="@Model.GDizin" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="Aciklama">Layout Açıklama:</label>
                            <textarea class="form-control" name="Aciklama" id="Aciklama">@Model.Aciklama</textarea>
                        </div>
                        <div class="form-group">
                            <label for="MAciklama">Mobil Layout Açıklama:</label>
                            <textarea class="form-control" name="MAciklama" id="MAciklama">@Model.MAciklama</textarea>
                        </div>

                    </div>
                    <div class="box-footer">
                        <button type="submit" class="btn btn-success pull-right">Kaydet</button>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
@section BodyAlti{
    <script src="~/Areas/SiteYonetimPaneli/Content/ckeditor/ckeditor.js"></script>
    <script>
        $(function () {
            CKEDITOR.replace('Aciklama');
            CKEDITOR.replace('MAciklama')
        })
    </script>
}

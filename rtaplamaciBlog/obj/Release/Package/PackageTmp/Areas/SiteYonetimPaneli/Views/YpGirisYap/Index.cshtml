@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Giriş Yap | Site Yönetim Paneli</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link href="~/Areas/SiteYonetimPaneli/Content/dist/adminlte.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
    <script src="~/Areas/SiteYonetimPaneli/Content/dist/adminlte.min.js"></script>
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="#">
                <b>Site Yönetim Paneli</b>
            </a>
        </div>
        <div class="login-box-body">
            <hr />
            @if (TempData["Message"] != null)
            {
                <div class="box-body">
                    <div class="alert alert-danger alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        <h4><i class="icon fa fa-ban"></i> Uyarı!</h4>
                        @TempData["Message"]
                    </div>
                </div>
            }
            @using (Html.BeginForm("Index", "YpGirisYap", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="form-group has-feedback">
                    <input type="text" class="form-control" placeholder="Kullanıcı Adı" name="KullaniciAdi" value="@ViewData["kullaniciAdi"]">
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" class="form-control" placeholder="Şifre" name="KullaniciSifre">
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="row">
                    <div class="col-xs-8">

                        <label class="checkbox-group">
                            <input type="checkbox" name="KullaniciAdimiHatirla" @ViewData["kullanicicheckBox"]> Kullanıcı Adımı Hatırla
                            <span class="checkmark"></span>
                        </label>

                    </div>
                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Giriş Yap</button>
                    </div>
                </div>
            }
            <div class="social-auth-links text-center">
                <hr />
            </div>
            <a href="http://rtaplamaci.com/" target="_blank">rtaplamaci.com</a>
        </div>
    </div>
</body>
</html>

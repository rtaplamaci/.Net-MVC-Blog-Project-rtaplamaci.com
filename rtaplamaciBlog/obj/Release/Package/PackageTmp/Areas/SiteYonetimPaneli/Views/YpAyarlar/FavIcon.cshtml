
@{
    ViewBag.Title = "FavIcon Ayarları | Site Yönetim Paneli";
    Layout = "~/Areas/SiteYonetimPaneli/Views/Shared/YpLayout.cshtml";
}
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">FavIcon Ayarları</h3>
                </div>
                @using (Html.BeginForm("FavIcon", "YpAyarlar", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="box-body">
                        @if (TempData["Basarili"] != null)
                        {
                            <div class="alert alert-success alert-dismissible">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                <h4><i class="icon fa fa-info"></i> Bilgi!</h4>
                                <p style="font-size:large">@TempData["Basarili"]</p>
                            </div>
                        }
                        @if (TempData["Uyari"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                <h4><i class="icon fa fa-info"></i> Uyarı!</h4>
                                <p style="font-size:large">@TempData["Uyari"]</p>
                            </div>
                        }
                        <div class="form-group">
                            <label for="AnasayfaIcerikGorseli">FavIcon Görseli:</label>
                            <div class="col-sm-12">
                                <div class="col-md-12">
                                    <div class="row">
                                        <div class="col-md-3">
                                            <img class="col-md-12 col-sm-12 col-xs-12" src="~/Images/General/favicon.png">
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label for="FavIcon">Görsel Seç:</label>
                                                <input type="file" name="FavIcon">
                                                <p class="help-block"><i class="fa fa-exclamation-circle"></i> Görsel boyutları: 57x57 olmalı.</p>
                                                <br>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="box-footer">
                        <button type="submit" class="btn btn-success pull-right">Kaydet</button>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

